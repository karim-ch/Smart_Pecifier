<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">



    <ImageView
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/logopec"
        android:id="@+id/logo"/>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:src="@drawable/slogon"
        android:id="@+id/titre"
        android:layout_below="@id/logo"
        android:layout_centerHorizontal="true"/>

    <android.support.design.button.MaterialButton
        android:layout_marginTop="45dp"
        android:id="@+id/showadd"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ajouter"
        android:textSize="19sp"
        android:textColor="@color/colorPrimaryDark"
        app:cornerRadius="12dp"
        android:gravity="center_vertical"
        app:icon="@drawable/ic_cloud_done_black_24dp"
        android:layout_below="@id/titre"
        app:iconTint="@color/colorPrimaryDark"
        android:layout_centerHorizontal="true"
        />


    <android.support.design.button.MaterialButton
        android:layout_marginTop="15dp"
        android:id="@+id/superviser"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Superviser"
        android:textSize="19sp"
        android:textColor="@color/colorPrimaryDark"
        app:cornerRadius="12dp"
        android:gravity="center_vertical"
        app:icon="@drawable/ic_cloud_download_black_24dp"
        android:layout_below="@id/showadd"
        app:iconTint="@color/colorPrimaryDark"
        android:layout_centerHorizontal="true"
        />

    <android.support.design.button.MaterialButton
        android:layout_marginTop="15dp"
        android:id="@+id/params"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ParamÃ©tres"
        android:textSize="19sp"
        android:textColor="@color/colorPrimaryDark"
        app:cornerRadius="12dp"
        android:gravity="center_vertical"
        app:icon="@drawable/ic_settings_black_24dp"
        android:layout_below="@id/superviser"
        app:iconTint="@color/colorPrimaryDark"
        android:layout_centerHorizontal="true"
        />






</RelativeLayout>